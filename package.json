{
  "name": "farm-project",
  "version": "1.0.0",
  "description": "Farming Technology - static site upgraded with a small realtime Node.js backend (Socket.IO)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npm run test:unit",
    "test:chat": "node tests/test-socket.js",
    "test:unit": "cross-env NODE_ENV=test jest --runInBand",
    "test:e2e": "playwright test",
    "test:ci": "npm run test:unit && npm run test:e2e",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,md,json,css,html}\"",
    "images:generate": "node scripts/generate-images.js"
  },
  "author": "SPARSH",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.0",
    "express-session": "^1.17.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.3",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.2"
  },
  "optionalDependencies": {
    "connect-sqlite3": "^0.9.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "cross-env": "^10.1.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^30.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^3.0.0",
    "socket.io-client": "^4.7.2",
    "supertest": "^7.1.4"
  }
}
