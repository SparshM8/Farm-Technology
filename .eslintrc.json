{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "node": {
      "version": "18"
    }
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "node/no-unsupported-features/es-syntax": "off",
    "node/no-unsupported-features/node-builtins": "off",
    "node/no-unpublished-require": "off",
    "no-useless-escape": "off",
    "no-process-exit": "off",
    "no-empty": ["error", { "allowEmptyCatch": true }]
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "env": { "jest": true },
      "rules": {
        "node/no-unpublished-require": "off",
        "no-process-exit": "off",
        "no-empty": "off"
      }
    }
  ]
}
